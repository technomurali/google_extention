{
  "manifest_version": 3,
  "name": "Intelligent Chrome (iChrome) Assistant",
  "version": "2.0",
  "description": "AI-powered browser assistant with history, bookmarks, and downloads can act intelligently",
  "permissions": [
    "storage",
    "activeTab",
    "sidePanel",
    "scripting"
  ],
  "optional_permissions": [
    "history",
    "bookmarks",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "iCrome Assistant",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "src/sidepanel/sidepanel.html"
  },
  "background": {
    "service_worker": "src/background/background.js"
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["docs/USER_GUIDE.md"],
      "matches": ["<all_urls>"]
    }
  ]
}

